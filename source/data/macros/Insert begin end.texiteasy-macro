<macro readOnly="1">
    <description>Begin End Environment</description>
    <trigger>
    	<keys>Ctrl+E</keys>
    	<leftWord>
    		(.*)
    	</leftWord>
    </trigger>
    <content><![CDATA[\begin{${1:environment}}
    <?
if(environment == "itemize" || environment == "enumerate")
{
	write("\\item ")
}
else if(environment == "description")
{
	write("\\item[ ] ")
}
?>${text}
\end{${1:environment}}]]></content>
</macro>