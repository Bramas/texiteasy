<macro readOnly="1">
    <description>Simple Document</description>
    <trigger>
    	<keys>Ctrl+Shift+N</keys>
    	<leftWord>
    		.*
    	</leftWord>
    </trigger>
    <content><![CDATA[<?
editor.stopScriptEvaluation()
var t = editor.plainText;
editor.plainText = ""
?>
\documentclass{${Type}}

\begin{document}

\title{${Title}}
\author{${Author}}
\maketitle
<?
  write(t)
?>
\end{document}
<?

cursor.moveStart()
cursor.apply()
?>]]></content>
</macro>